	<slot id="5" x="-6"  y="-4" z="0" faceup="0" layer="1" hiddenby="20,19" />
	<slot id="4" x="-9"  y="-0.2" z="0" faceup="0" layer="1" hiddenby="19,18" />
	<slot id="3" x="-6" y="1" z="0" faceup="0" layer="1" hiddenby="17,16" />
	<slot id="2" x="-3" y="1.5" z="0" faceup="0" layer="1" hiddenby="16,15" />
	
	
	<!-- Layer2, the next level. -->
	<slot id="1"  x="0" y="1" z="0" faceup="0" layer="2" hiddenby="22,23" />
