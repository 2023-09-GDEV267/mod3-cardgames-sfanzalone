	<slot id="2" x="-6"  y="1.5" z="0" faceup="0" layer="0" hiddenby="8,7" />
	<slot id="1" x="-3"  y="2" z="0" faceup="0" layer="0" hiddenby="6,5" />
	
	<!-- Layer1, the next level. -->
	<slot id="1" x="0" y="2" z="0" faceup="0" layer="1" hiddenby="13,14" />
	<slot id="2" x="3" y="1.5" z="0" faceup="0" layer="1" hiddenby="15,16" />
	<slot id="3" x="6" y="1" z="0" faceup="0" layer="1" hiddenby="16,17" />
	<slot id="4" x="9"  y="-0.2" z="0" faceup="0" layer="1" hiddenby="18,19" />
	<slot id="5" x="6"  y="-4" z="0" faceup="0" layer="1" hiddenby="19,20" />
	<slot id="6" x="3"  y="-5" z="0" faceup="0" layer="1" hiddenby="20,21" />
	<slot id="7" x="0"  y="-6" z="0" faceup="0" layer="1" hiddenby="21,22" />
